@model NewUserDetailReportViewModel
@{ 
    ViewData["Title"] = "Create new report";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form asp-controller="UserReporting" asp-action="Post" asp-antiforgery="true"
              method="post" class="form-horizontal" role="form">
            <fieldset>
                <legend>Create a new user report</legend>
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="FirstName"></label>
                    <div class="col-md-8">
                        <input asp-for="FirstName" class="form-control input-md" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="LastName"></label>
                    <div class="col-md-8">
                        <input asp-for="LastName" class="form-control input-md" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="MiddleName"></label>
                    <div class="col-md-8">
                        <input asp-for="MiddleName" class="form-control input-md" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="DateOfBirth"></label>
                    <div class="col-md-8">
                        <input asp-for="DateOfBirth" type="date" class="form-control input-md" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 control-label" asp-for="JoinedOn"></label>
                    <div class="col-md-8">
                        <input asp-for="JoinedOn" type="date" class="form-control input-md" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4 col-md-offset-4">
                        <button type="submit" class="btn btn-success">Create report</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>